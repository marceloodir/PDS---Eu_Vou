<p id="notice"><%= notice %></p>
<% unless user_signed_in? %>
    <p><%= link_to "Sign_in", user_session_path %></p>
<%end%>
<h1>Listing Events</h1>
<table>
  <thead>
    <tr>
      <th>Titulo</th>
      <th>Descricao</th>
      <th>Endereco</th>
      <th>Data</th>
      <th>Categorias</th>
      <th>Imagem</th>
      <th>Criado por</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.titulo %></td>
        <td><%= event.descricao %></td>
        <td><%= event.endereco %></td>
        <td><%= event.data %></td>
        <td><% event.categories.each do |c|%>
              <%=c.titulo %><br><%end%></td>
        <td><%= event.imagem %></td>
        <td><%=event.creator.nome %></td>
        <%if user_signed_in? %>
            <td><%= link_to 'Show', event %></td>
            <% if event.creator == current_user %>
                <td><%= link_to 'Edit', edit_event_path(event) %></td>
                <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            <%end%>
        <%end%>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%if user_signed_in? %>
    <%= link_to 'New Event', new_event_path %>
<%end%>