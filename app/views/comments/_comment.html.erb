<div class="media" id="<%= comment.id %>">
  <a class="pull-left" href="#">
    <%= image_tag  comment.user.avatar.url(:thumb) if comment.user.avatar.url.present? %><br><br>
    <!--<img class="media-object" style="width: 64px; height: 64px;" src="http://u.sera.to/users/84/73584/avatar_mid_1345805197.png" alt="">-->
  </a>
  <div class="media-body">
    <h4 class="media-heading"><%=comment.user.nome %>
      <small><%= comment.data.strftime('%R')%> - <%= comment.data.strftime('%d/%m/%Y') %></small>
    </h4>
    <%=comment.conteudo %>
    <%= (link_to 'Apagar', comment, method: :delete, data: { confirm: 'Are you sure?' }, remote: true) if current_user == comment.user %>
  </div>
</div>